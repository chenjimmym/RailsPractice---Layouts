<% content_for :title, "Users" %>

<% content_for :left_side do %>

<h2>All Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Favorite Language</th>
        </tr>
    </thead>
</table>

<% end %>

<% content_for :right_side do %>

<h2>New User</h2>
<form action="/posts" method="post">
    <p>First Name</p>
    <input type="text">
    <p>Last Name</p>
    <input type="text">
    <p>Favorite Language</p>
    <input type="text"><br><br>
    <input type="submit" value="Submit"><br><br>
    <a href="/users/new"><button>All Posts</button></a>
</form>

<% end %>